{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./"],
        "extensions": [".js", ".ts", ".vue"]
      }
    }
  },
  "plugins": ["@typescript-eslint", "prettier", "jest", "eslint-plugin-import-helpers"],
  "extends": [
    "prettier",
    "plugin:sonarjs/recommended",
    "plugin:jest/all",
    "plugin:import/warnings",
    "plugin:import/typescript",
    "plugin:vue-a11y/base",
    "plugin:unicorn/recommended"
  ],
  "ignorePatterns": ["commitlint.config.js", "stylelint.config.js"],
  "rules": {
    "prettier/prettier": "warn",
    "prefer-const": "warn",
    "no-console": "off",
    "unicorn/no-abusive-eslint-disable": "off",
    "vue/attribute-hyphenation": "off",
    "@typescript-eslint/no-unused-vars": "warn",
    "unicorn/prevent-abbreviations": "off",
    "jest/prefer-expect-assertions": "off",
    "import/order": [
      "warn",
      {
        "newlines-between": "always"
      }
    ],
    "unicorn/filename-case": [
      "warn",
      {
        "cases": {
          "pascalCase": true,
          "kebabCase": true,
          "camelCase": true
        }
      }
    ],
    "vue-a11y/click-events-have-key-events": "off", // enable it once fixed https://github.com/maranran/eslint-plugin-vue-a11y/issues/10
    "vue-a11y/label-has-for": [
      "error",
      {
        "required": {
          "some": ["id"]
        }
      }
    ]
  }
}
